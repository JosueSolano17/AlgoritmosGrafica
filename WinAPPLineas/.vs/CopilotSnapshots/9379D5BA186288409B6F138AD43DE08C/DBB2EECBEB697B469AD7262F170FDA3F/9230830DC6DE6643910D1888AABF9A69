using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WinAPPLineas
{
    public partial class Form1 : Form
    {
        private ToolStripMenuItem algoritmosToolStripMenuItem;
        private ToolStripMenuItem rellenoToolStripMenuItem;
        private ToolStripMenuItem floodFillToolStripMenuItem;
        private ToolStripMenuItem boundaryFillToolStripMenuItem;
        private ToolStripMenuItem scanlineFillToolStripMenuItem;
        private ToolStripMenuItem recorteLineasToolStripMenuItem;
        private ToolStripMenuItem cohenSutherlandToolStripMenuItem;
        private ToolStripMenuItem liangBarskyToolStripMenuItem;
        private ToolStripMenuItem cyrusBeckToolStripMenuItem;
        private ToolStripMenuItem recortePoligonosToolStripMenuItem;
        private ToolStripMenuItem sutherlandHodgmanToolStripMenuItem;
        private ToolStripMenuItem weilerAthertonToolStripMenuItem;
        private ToolStripMenuItem scanlineClipToolStripMenuItem;

        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

       

        private void ddaToolStripMenuItem_Click(object sender, EventArgs e)
        {
            DDA DDA = new DDA();
            DDA.MdiParent = this;
            DDA.Show();
        }

        private void midpointToolStripMenuItem_Click(object sender, EventArgs e)
        {
            MLA MLA = new MLA();
            MLA.MdiParent = this;
            MLA.Show();
        }

        private void xiaolinWuToolStripMenuItem_Click(object sender, EventArgs e)
        {
            XWLA xWLA = new XWLA();
            xWLA.MdiParent = this;
            xWLA.Show();
        }

        private void midPointCircleToolStripMenuItem_Click(object sender, EventArgs e)
        {
            Circulo circulo = new Circulo();
            circulo.MdiParent = this;
            circulo.Show();
        }

       

        private void circleBrenshmanToolStripMenuItem_Click(object sender, EventArgs e)
        {
          CBA cba = new CBA();
            cba.MdiParent = this;
            cba.Show();
        }

        private void círcleParamétricoToolStripMenuItem_Click(object sender, EventArgs e)
        {
            CPE cpe = new CPE();
            cpe.MdiParent = this;
            cpe.Show();
        }

        private void InitializeComponent()
        {
            // ...existing initialization...
            // add new main menu branch
            this.algoritmosToolStripMenuItem = new ToolStripMenuItem();
            this.rellenoToolStripMenuItem = new ToolStripMenuItem();
            this.floodFillToolStripMenuItem = new ToolStripMenuItem();
            this.boundaryFillToolStripMenuItem = new ToolStripMenuItem();
            this.scanlineFillToolStripMenuItem = new ToolStripMenuItem();
            this.recorteLineasToolStripMenuItem = new ToolStripMenuItem();
            this.cohenSutherlandToolStripMenuItem = new ToolStripMenuItem();
            this.liangBarskyToolStripMenuItem = new ToolStripMenuItem();
            this.cyrusBeckToolStripMenuItem = new ToolStripMenuItem();
            this.recortePoligonosToolStripMenuItem = new ToolStripMenuItem();
            this.sutherlandHodgmanToolStripMenuItem = new ToolStripMenuItem();
            this.weilerAthertonToolStripMenuItem = new ToolStripMenuItem();
            this.scanlineClipToolStripMenuItem = new ToolStripMenuItem();

            this.algoritmosToolStripMenuItem.Text = "Algoritmos";
            this.rellenoToolStripMenuItem.Text = "Relleno";
            this.floodFillToolStripMenuItem.Text = "Flood Fill (BFS)";
            this.boundaryFillToolStripMenuItem.Text = "Boundary Fill";
            this.scanlineFillToolStripMenuItem.Text = "Scanline Fill";
            this.recorteLineasToolStripMenuItem.Text = "Recorte de Líneas";
            this.cohenSutherlandToolStripMenuItem.Text = "Cohen–Sutherland";
            this.liangBarskyToolStripMenuItem.Text = "Liang–Barsky";
            this.cyrusBeckToolStripMenuItem.Text = "Cyrus–Beck";
            this.recortePoligonosToolStripMenuItem.Text = "Recorte de Polígonos";
            this.sutherlandHodgmanToolStripMenuItem.Text = "Sutherland–Hodgman";
            this.weilerAthertonToolStripMenuItem.Text = "Weiler–Atherton (simple)";
            this.scanlineClipToolStripMenuItem.Text = "Scanline Clip";

            this.floodFillToolStripMenuItem.Click += (s, e) => OpenRellenoDemo(RellenoVariant.FloodFill);
            this.boundaryFillToolStripMenuItem.Click += (s, e) => OpenRellenoDemo(RellenoVariant.BoundaryFill);
            this.scanlineFillToolStripMenuItem.Click += (s, e) => OpenRellenoDemo(RellenoVariant.ScanlineFill);
            this.cohenSutherlandToolStripMenuItem.Click += (s, e) => OpenClipLineDemo(ClipLineVariant.CohenSutherland);
            this.liangBarskyToolStripMenuItem.Click += (s, e) => OpenClipLineDemo(ClipLineVariant.LiangBarsky);
            this.cyrusBeckToolStripMenuItem.Click += (s, e) => OpenClipLineDemo(ClipLineVariant.CyrusBeck);
            this.sutherlandHodgmanToolStripMenuItem.Click += (s, e) => OpenClipPolyDemo(ClipPolyVariant.SutherlandHodgman);
            this.weilerAthertonToolStripMenuItem.Click += (s, e) => OpenClipPolyDemo(ClipPolyVariant.WeilerAtherton);
            this.scanlineClipToolStripMenuItem.Click += (s, e) => OpenClipPolyDemo(ClipPolyVariant.ScanlineClip);

            this.rellenoToolStripMenuItem.DropDownItems.AddRange(new ToolStripItem[] {
                this.floodFillToolStripMenuItem,
                this.boundaryFillToolStripMenuItem,
                this.scanlineFillToolStripMenuItem
            });
            this.recorteLineasToolStripMenuItem.DropDownItems.AddRange(new ToolStripItem[] {
                this.cohenSutherlandToolStripMenuItem,
                this.liangBarskyToolStripMenuItem,
                this.cyrusBeckToolStripMenuItem
            });
            this.recortePoligonosToolStripMenuItem.DropDownItems.AddRange(new ToolStripItem[] {
                this.sutherlandHodgmanToolStripMenuItem,
                this.weilerAthertonToolStripMenuItem,
                this.scanlineClipToolStripMenuItem
            });

            this.algoritmosToolStripMenuItem.DropDownItems.AddRange(new ToolStripItem[] {
                this.rellenoToolStripMenuItem,
                this.recorteLineasToolStripMenuItem,
                this.recortePoligonosToolStripMenuItem
            });

            this.menuStrip1.Items.Add(this.algoritmosToolStripMenuItem);
        }

        private enum RellenoVariant { FloodFill, BoundaryFill, ScanlineFill }
        private enum ClipLineVariant { CohenSutherland, LiangBarsky, CyrusBeck }
        private enum ClipPolyVariant { SutherlandHodgman, WeilerAtherton, ScanlineClip }

        private void OpenRellenoDemo(RellenoVariant v)
        {
            var frm = new DemoRellenoForm(v) { MdiParent = this };
            frm.Show();
        }
        private void OpenClipLineDemo(ClipLineVariant v)
        {
            var frm = new DemoClipLineForm(v) { MdiParent = this };
            frm.Show();
        }
        private void OpenClipPolyDemo(ClipPolyVariant v)
        {
            var frm = new DemoClipPolyForm(v) { MdiParent = this };
            frm.Show();
        }
    }
}
